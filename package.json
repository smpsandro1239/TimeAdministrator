{
  "name": "time-administrator",
  "version": "1.0.0",
  "description": "Sistema de gestão de subscrições de clientes",
  "scripts": {
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install --legacy-peer-deps",
    "install:frontend": "cd frontend && npm install --legacy-peer-deps",
    "start:docker": "docker-compose up --build -d",
    "start:local": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run start:dev",
    "start:frontend": "cd frontend && ng serve",
    "build": "echo 'Build completed - use individual service builds'",
    "stop": "docker-compose down",
    "reset": "docker-compose down -v --rmi all",
    "logs": "docker-compose logs -f"
  },
  "keywords": [
    "angular",
    "nestjs",
    "mongodb",
    "docker",
    "subscriptions"
  ],
  "author": "TimeAdministrator Team",
  "license": "MIT",
  "dependencies": {
    "xlsx": "^0.18.5"
  }
}
